
<div class="form-group">
  <%= f.label :first_name ,class: "col-sm-2 control-label #{'text-danger' if  @user.errors.full_messages_for(:first_name).present? }"%>
  <div class="col-sm-4 <%= 'has-error' if  @user.errors.full_messages_for(:first_name).present? %>">
    <%= f.text_field :first_name ,class: 'form-control'%>
    <% if @user.errors.full_messages_for(:first_name).present? %>
      <div class="text-danger"><%= @user.errors.full_messages_for(:first_name)[0] %></div>
    <% end %>
  </div>

  <%= f.label :last_name ,class: "col-sm-2 control-label #{'text-danger' if  @user.errors.full_messages_for(:last_name).present? }"%>
  <div class="col-sm-4 <%= 'has-error' if @user.errors.full_messages_for(:last_name).present? %>">
    <%= f.text_field :last_name ,class: 'form-control'%>
    <% if @user.errors.full_messages_for(:last_name).present?  %>
      <div class="text-danger"><%= @user.errors.full_messages_for(:last_name)[0] %></div>
    <% end %>
  </div>
</div>

